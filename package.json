{
   "name": "public-chat-room",
   "version": "1.0.0",
   "description": "public chat room rest api",
   "main": "server.ts",
   "scripts": {
      ".": "nodemon --watch src --watch libs ./src/server.ts",
      "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
      "postinstall": "npm run build-ts",
      "build-ts": "tsc --project tsconfig.json",
      "start": "npm run serve",
      "serve": "node dist/server.js",
      "watch-node": "nodemon dist/server.js",
      "watch-ts": "tsc -w"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/riki4iki/public-chat-room.git"
   },
   "keywords": [
      "api",
      "rest",
      "node.js",
      "koa",
      "postgres"
   ],
   "author": "Ivan Aphanasyev <nekaktotak2@gmail.com>",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/riki4iki/public-chat-room/issues"
   },
   "homepage": "https://github.com/riki4iki/public-chat-room#readme",
   "dependencies": {
      "@koa/cors": "^2.2.3",
      "class-validator": "^0.11.0",
      "dotenv": "^8.2.0",
      "koa": "^2.11.0",
      "koa-bodyparser": "^4.2.1",
      "koa-logger": "^3.2.1",
      "koa-router": "^8.0.8",
      "module-alias": "^2.2.2",
      "pg": "^7.18.2",
      "pg-connection-string": "^2.1.0",
      "typeorm": "^0.2.25"
   },
   "devDependencies": {
      "@types/eslint": "^6.1.8",
      "@types/http-errors": "^1.6.3",
      "@types/koa": "^2.11.1",
      "@types/koa-bodyparser": "^4.3.0",
      "@types/koa-logger": "^3.1.1",
      "@types/koa-router": "^7.4.0",
      "@types/koa__cors": "^3.0.1",
      "@types/module-alias": "^2.0.0",
      "@types/node": "^13.7.4",
      "@typescript-eslint/eslint-plugin": "^2.20.0",
      "@typescript-eslint/parser": "^2.20.0",
      "eslint": "^6.1.0",
      "eslint-config-airbnb-base": "^14.0.0",
      "eslint-config-prettier": "^6.10.0",
      "eslint-plugin-import": "^2.20.1",
      "nodemon": "^2.0.2",
      "ts-node": "^8.6.2",
      "typescript": "^3.8.2"
   }
}
